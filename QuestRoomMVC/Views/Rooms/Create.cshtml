@model QuestRoomMVC.Models.Room

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Загрузить фото: 
                    <input type="file" name="fileimg" />                    
                </label>               
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountPlayers" class="control-label"></label>
                <input asp-for="CountPlayers" class="form-control" />
                <span asp-validation-for="CountPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultLevel" class="control-label"></label>               
                 <select asp-for="DifficultLevel" class="form-control" asp-items="@Html.GetEnumSelectList<DifficultLevel>()" ></select>
                <span asp-validation-for="DifficultLevel" class="text-danger"></span>                   
            </div>
            <div class="form-group">
                <label asp-for="FearLevel" class="control-label"></label>               
                <select asp-for="FearLevel" class="form-control" asp-items="@Html.GetEnumSelectList<FearLevel>()" ></select>
                <span asp-validation-for="FearLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
